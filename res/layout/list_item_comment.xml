<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="desc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="TITLE"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_title"
        android:layout_below="@+id/comment_title"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:rating="3.0"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_title"
        android:layout_below="@+id/ratingBar"
        android:text="NAME"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/comment_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_title"
        android:layout_below="@+id/comment_name"
        android:text="desc"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comment_title"
        android:layout_alignBottom="@+id/comment_title"
        android:layout_alignParentRight="true"
        android:text="date"
        android:textColor="#000000"
        android:textSize="16sp" /> -->
        
        <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_title"
        android:layout_below="@+id/comment_desc"
        android:text="date"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>